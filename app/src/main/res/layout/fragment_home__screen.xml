<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.msi.pitchbooker.Home_Screen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:text="Mon"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/btn_green_sqare" />

                <Button
                    android:id="@+id/btn2"
                    android:text="Tue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_green_sqare" />

                <Button
                    android:id="@+id/btn3"
                    android:text="Wed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_green_sqare" />

                <Button
                    android:id="@+id/btn4"
                    android:text="THur"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_green_sqare" />

                <Button
                    android:id="@+id/btn5"
                    android:text="Fri"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_green_sqare" />

                <Button
                    android:id="@+id/btn6"
                    android:text="Sat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_green_sqare" />

                <Button
                    android:id="@+id/btn7"
                    android:text="Sun"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_green_sqare" />
                <Button
                    android:id="@+id/btn8"
                    android:text="Mon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_green_sqare" />
            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnA"
                    android:text="A"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_green_sqare" />

                <Button
                    android:id="@+id/btnB"
                    android:text="B"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_green_sqare" />

                <Button
                    android:id="@+id/btnC"
                    android:text="C"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_green_sqare" />

                <Button
                    android:id="@+id/btnD"
                    android:text="D"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_green_sqare" />/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>
